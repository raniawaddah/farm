<odoo>
    <data>
        <report
                id="customer_report"
                string="Customer Details"
                model="farm.customer"
                report_type="qweb-pdf"
                file="farm.customer_report_template"
                name="farm.customer_report_template"
        />

        <template id="customer_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h1 style="margin-left:200px;">Yazid Chem Company</h1>
                            <br/>
                            <span class="text-center">Customer Name  >>   </span><span t-field="doc.customer_name"></span>
                            <br/>
                            <span class="text-center">ID  >>   </span><span t-field="doc.id_person"></span>
                            <br/>
                            <span class="text-center">Select Users  >>   </span><span t-field="doc.user_ids"></span>
                            <br/>
                            <span class="text-center">Phone  >>   </span><span t-field="doc.phone"></span>
                            <br/>
                            <span class="text-center">Date Of Sale   >>   </span><span t-field="doc.date_of_sale"></span>
                            <br/>
                            <span class="text-center">Responsible  >>   </span><span t-field="doc.responsible"></span>
                            <br/>
                            <br/>

                            <table border="1" class="mt32 table table-bordered oe_import_grid bg-white">
                                <thead>
                                    <tr style="border:1">
                                        <th style="border:1">S.No</th>
                                        <th style="border:1">Product Name</th>
                                        <th style="border:1">Product Type</th>
                                        <th style="border:1">Quantity</th>
                                        <th style="border:1">Unit Price</th>
                                        <th style="border:1">total</th>
                                    </tr>
                                </thead>
                                <body>
                                    <t t-set="i" t-value="1" style="border:1px;"/>
                                    <t t-set="total" t-value="0" style="border:1px;"/>
                                    <tr t-foreach="doc.product_ids" t-as="oo">
                                        <td t-esc="i" style="border:1"/>
                                        <t t-set="total" t-value="total + oo.unit_price"/>
                                        <td style="border:1" ><span t-field="oo.product_name" style="border:1" /></td>
                                        <td style="border:1" ><span t-field="oo.product_type" style="border:1" /></td>
                                        <td style="border:1" ><span t-field="oo.quantity" style="border:1" /></td>
                                        <td style="border:1" ><span t-field="oo.unit_price" style="border:1" /></td>
                                        <td style="border:1" ><span t-field="oo.total" style="border:1" /></td>
                                        <t t-set="i" t-value="i+1" style="border:1"/>

                                    </tr>
                                    <tr border="1">
                                        <td style="border:1">SubTotal</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td class="text_right"><span t-esc="subtotal"/></td>

                                    </tr>
                                </body>
                            </table>

<!--                             <br></br>-->
<!--                            <span>SubTotal : </span><span t-esc="subtotal"/>-->


                        </div>

                    </t>
                </t>
            </t>
        </template>




