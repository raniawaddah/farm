<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="open_products" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">farm.products</field>
            <field name="view_mode">tree,calendar,graph,form</field>
            <field name="domain">[('customer_id', '=', active_id)]</field>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create The First Products
                </p>
            </field>
        </record>


        <record id="farm_customer_form_view" model="ir.ui.view">
            <field name="name">farm_customer_form_view</field>
            <field name="model">farm.customer</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_test" string="ORM" type="object" class="oe_highlight" />

                        <button name="send_to_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                        <button name="send_to_draft" string="Draft" type="object" class="oe_highlight" states="cancel"/>
                        <button name="send_to_customer" string="Send To Customer" type="object" class="oe_highlight"
                                states="confirm"/>
                        <button name="send_to_responsible" string="Send To Responsible" type="object" class="oe_highlight"
                                states="confirm"/>
                        <button name="send_to_done" string="Done" type="object" class="oe_highlight"
                                states="send_to_customer,send_to_responsible"/>

                        <button name="manager_approve" string="Approve" type="object" class="oe_highlight"
                                group="farm.customers_admin_group"/>


                        <button name="send_to_cancel" string="Cancel" type="object" class="oe_highlight"
                                states="confirm,send_to_customer,send_to_responsible,draft"/>
<!--                        Access Rights____-->


                        <button name="send_to_yc" string="Send Notification" type="object" class="oe_highlight"
                                states="confirm"/>
                        <!--                        Notifications button-->


                        <field name="state" widget="statusbar" statusbar_visible="confirm,approve,send_to_customer,send_to_responsible,done,draft,cancel"/>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(open_products)d" type="action" class="oe_stat_button"
                                    icon="fa-star" string="Products">
                                <field name="product_count" />

                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="customer_name"/>
                                <field name="id_person"/>
                                <field name="user_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="phone" groups="farm.customers_admin_group"/>
                                <field name="date_of_sale"/>
                                <field name="responsible" />

                            </group>

                        </group>

                        <notebook>
                            <page string="Products">
                                <field name="product_ids">
                                    <tree>
                                        <field name="product_name"/>
                                        <field name="product_type"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total" sum="SubTotal"/>


                                    </tree>

                                </field>
                            </page>

                            <page string="Notes">
                                <field name="note"/>
                            </page>

                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="farm_customer_tree_view" model="ir.ui.view">
            <field name="name">farm_customer_form_view</field>
            <field name="model">farm.customer</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="customer_name"/>
                    <field name="date_of_sale"/>
                    <field name="phone"/>
                    <field name="responsible"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="farm_customer_kanban_view" model="ir.ui.view">
            <field name="name">farm_customer_kanban_view</field>
            <field name="model">farm.customer</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="customer_name"/>
                    <field name="date_of_sale"/>
                    <field name="phone"/>
                    <field name="responsible"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span style="color:red;"><t t-esc="record.customer_name.value"/></span>
                                        </strong>
                                    </div>
                                    <strong>
                                        <span><t t-esc="record.phone.value"/></span>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left text-muted">
                                    <span><t t-esc="record.date_of_sale.value"/></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="customer_name" widget="label_selection" />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="farm_customer_calendar_view" model="ir.ui.view">
            <field name="name">farm_customer_calendar_view</field>
            <field name="model">farm.customer</field>
            <field name="arch" type="xml">
                <calendar string="Customers Calendar" date_start="date_of_sale" color="customer_name" mode="month">
                    <field name="customer_name"/>
                    <field name="id_person" avatar_field="avatar_128"/>
                    <field name="phone"/>
                </calendar>
            </field>
        </record>

