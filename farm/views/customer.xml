        <record id="farm_customer_search_view" model="ir.ui.view">
            <field name="name">farm_customer_search_view</field>
            <field name="model">farm.customer</field>
            <field name="arch" type="xml">
                <search>
                    <field name="customer_name"/>
                    <field name="phone"/>
                    <field name="responsible"/>
                </search>
            </field>
        </record>

        <record id="farm_customer_pivot_view" model="ir.ui.view">
            <field name="name">farm_customer_pivot_view</field>
            <field name="model">farm.customer</field>
            <field name="arch" type="xml">
                <pivot string="Customer Pivot" sample="1">
                    <field name="customer_name" type="row"/>
                    <field name="date_of_sale" type="col" interval="day"/>
                </pivot>
            </field>
        </record>

        <record id="farm_customer_action" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">farm.customer</field>
<!--            <field name="domain">['|',('responsible','=',uid),('responsible','=',False)]</field>-->

            <field name="view_mode">tree,kanban,calendar,pivot,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create The First customer
                </p>
            </field>
        </record>

        <menuitem id="farm_customer_menu_root" name="Farm System"
                  action="farm_customer_action" web_icon="farm,static/description/icon30.png"
                  groups="customers_admin_group,products_admin_group"/>

        <menuitem id="farm_customer_menu_root2" name="customers" parent="farm_customer_menu_root"
                  action="farm_customer_action" groups="customers_admin_group"/>

    </data>
